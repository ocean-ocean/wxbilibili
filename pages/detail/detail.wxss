/* pages/detail/detail.wxss */
@import "../../app.wxss";
.main {
  padding: 10rpx;
  color: #666;
}
.video_info video {
  width: 100%;
}
.video_title .title:before {
  content: "\e6eb";
}
.video_info {
  margin-top: 10rpx;
}
.video_title {
  display: flex;
  justify-content: space-between;
  font-size: 35rpx;
}
.video_detail {
  margin-top:10rpx;
  font-size: 25rpx;
}
.video_detail text {
  margin-left: 15rpx;
}
.video_detail .author {
  color: #000;
}


/* 推荐视频 */
.other_list {
  margin-top: 10rpx;
}
.item_other {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.other_img_wrap {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.other_img_wrap image {
  width: 90%;
  border-radius: 15rpx;
}
.other_info {
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.other_title {
  font-size: 30rpx;
  color: #e06f93;
}
.other_detail {
  font-size: 26rpx;
  color: #666;
}